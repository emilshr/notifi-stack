{
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "dotenv -e .env turbo dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-packages": "pnpx turbo run lint build --filter='@emilshr/*' && changeset publish",
    "setup-db": "pnpm --filter web run setup-db"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.7",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.45.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.0.0",
    "turbo": "^1.10.12"
  },
  "name": "notifi-stack",
  "packageManager": "pnpm@8.6.7",
  "workspaces": [
    "apps/**/*",
    "packages/**/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  }
}
