{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "tsconfig.json"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env", ".env.local"]
    },
    "update-schema": {
      "dotEnv": [".env", ".env.local"],
      "cache": true,
      "inputs": ["*.prisma"],
      "persistent": false
    }
  }
}
